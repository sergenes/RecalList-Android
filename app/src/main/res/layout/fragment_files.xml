<?xml version="1.0" encoding="utf-8"?>
<com.nes.transfragment.LinearLayoutAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.files.FilesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:paddingTop="@dimen/main_title_top_padding"
            android:text="@string/files_title"
            android:paddingBottom="10dp"
            android:textSize="@dimen/main_title_text_size" />
        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:paddingTop="10dp"
            android:text="email@email.com"
            android:paddingBottom="10dp"
            android:textSize="@dimen/main_email_text_size" />

        <ListView
            android:id="@+id/filesListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@color/white"
            android:listSelector="@android:color/transparent"/>

    </LinearLayout>


</com.nes.transfragment.LinearLayoutAnimator>